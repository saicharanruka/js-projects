<%- include('partials/header.ejs') %>
<div>
    <form action="/update" method="POST" id="update-post" style="padding: 10px;">
        <label>Edit Post</label><br>
        <input required placeholder="Title" size="100%" type="text" name="title" value="<%= blogData.title %>"><br>
        <input required placeholder="Author" size="100%" type="text" name="author"value="<%= blogData.author %>"><br>
        <textarea  required style="width: 100%; height: 200px;" placeholder="Content" name="content" form="update-post" cols="25" wrap="soft"><%= blogData.content %></textarea><br>
        <input type="submit" value="Update">
    </form> 
</div>


